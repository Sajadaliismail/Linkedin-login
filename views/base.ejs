<%- include('header') -%>
<div id="main" class="container-fluid">
<div class="text-start row d-flex" id="login">
  <div class="container  ps-5 mt-5 mx-0 p-0 col-lg-6 col-md-6 col-sm-12 ">
    <div class="title ">
      <h1 class="font-weight-bold display-5 text-danger lh-base">Discover what your network can do for you</h1>
    </div>
    <form action="/route/login" method="POST" class="pt-2 m-0 p-0">
      <div class="form-group text-start pb-3">
        <small class="text-start form-text text-muted  ">Email address</small>
        <input type="email" class="form-control my-2 w-75 border border-dark" placeholder="Email" name="email" > 
      </div>
      <div class="form-group">
        <small class="text-start form-text text-muted  ">Password</small>
        <input type="password" class="form-control my-2 w-75 border border-dark" name="password" placeholder="Password" id="">
      
      </div>
      <button type="submit" class="btn btn-primary my-2 w-75 rounded-5">Login</button>
    </form>
     <% if(locals.Password){ %>
      <div class="alert alert-danger text-center w-75 py-2 mt-3">
        <%= Password %> 
      </div>
   <% } %> 
   <% if(locals.logout){ %>
    <div class="alert alert-success text-center w-75 py-2 mt-3">
      <%= logout %>
    </div>
